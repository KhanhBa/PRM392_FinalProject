<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/background_light"
    android:elevation="2dp"
    android:layout_margin="8dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Container for each Yard item with rounded corners and shadow -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/yard_card_background"
        android:padding="12dp">

        <!-- Yard Image -->
        <ImageView
            android:id="@+id/img_yard"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_yard_image"
            android:layout_marginRight="12dp"
            android:background="@drawable/circle_background" />

        <!-- Yard Information (Name, Description, Price) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Yard Name -->
            <TextView
                android:id="@+id/txt_yard_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yard Name"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Yard Description -->
            <TextView
                android:id="@+id/txt_yard_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yard Description"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <!-- Yard Price -->
            <TextView
                android:id="@+id/txt_yard_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VND 30k/hour"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
