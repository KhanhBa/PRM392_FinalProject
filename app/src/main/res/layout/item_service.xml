<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivServiceImage"
            android:layout_width="118dp"
            android:layout_height="151dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp" /> <!-- Add margin to space out from TextViews -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="151dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slot Name"
                android:textColor="#009256"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tvServicePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Price"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_margin="15dp"
                android:id="@+id/tvDescriptionService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Description"
                android:textColor="#6D6D6D"
                android:textSize="14sp"
 />
        </LinearLayout>

</LinearLayout>
    </androidx.cardview.widget.CardView>
