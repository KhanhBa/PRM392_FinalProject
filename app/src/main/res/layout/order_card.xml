<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#FDF4F4"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        >

        <ImageView
            android:id="@+id/ivYardOrderCard"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvYardNameOrderCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Sân"
                android:textColor="#3DB318"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:text="31/12/2024"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/tvStartTimeOrderCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bắt đầu: \n11:00"
                    android:textColor="#878585"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text=" - "
                    android:textColor="#878585"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvEndTimeOrderCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kết thúc: \n13:00"
                    android:textColor="#878585"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Tổng tiền: "
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                />

            <!-- View Details Button -->
            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem chi tiết"
                android:textSize="12sp"
                android:backgroundTint="#81E0A0"
                android:textColor="@android:color/white"
                android:padding="6dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
